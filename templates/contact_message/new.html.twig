{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}Envoyer un Message{% endblock %}

{% block body %}


<style>

    ::placeholder {
        font-size:1.10em !important;
        font-weight:bold;
        color: #66666d  !important;
      }

    textarea::placeholder {
        font-size:1.15em !important;
        font-weight:bold;
        color: #66666d !important;
      }
</style>

    <div class="container col-sm-4 pt-3">
        
        <h3 class="my-4 font-weight-bold">Envoyer un message</h3>
            
        {{ form_start(form) }}

        <div class="mb-4"> {{ form_widget(form.senderEmail) }}</div>
        <div class="mb-4">{{ form_widget(form.title) }}</div>
        <div class="mb-4">{{ form_widget(form.content) }}</div>

        <!-- Actions Buttons -->

        <div class="pt-1">

            <button class="btn btn-lg btn-success bg-green sharp font-weight-bold mr-2">{{ button_label|default('Envoyer') }}</button>
        
            <a href="{{path('project_show',{'slug':slug})}}">
        
                <button type="button" class="btn btn-lg btn-info sharp font-weight-bold">Annuler</button>
            </a>

        </div>

        
        {{ form_end(form) }}
        
    </div>

{% endblock %}
