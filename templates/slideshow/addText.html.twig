{% extends 'base.html.twig' %}

{% block title %}Ajouter une Diapo Texte{% endblock %}

{% block body %}

<div class="container">

  <h3 class="my-3 font-weight-bold">Diapo Pitch Texte</h3>

  <div class="row">

    <div class="col-7">
          
      <form method="post">
        <textarea id="mytextarea" class="">Hello, World!</textarea>
      </form>
    </div>


  </div>


</div>



{% endblock %}

{% block javascripts %}

  <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

  <script>
    tinymce.init({
      selector: '#mytextarea',
      language: 'fr_FR',
      plugins: "emoticons, lists, link",
      toolbar: "undo redo | styleselect | emoticons bullist bold italic link | alignleft aligncenter alignright alignjustify | outdent indent",
      link_title: false,
      target_list: false,
    });
  </script>


{% endblock %}