{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block title %}Ajouter une Image ou un Schéma{% endblock %}

{% block body %}

<div class="container">

    <h2 class="h3 mt-3">Ajouter une Image ou un Schéma </h2>

    {{form_start(form)}}

    <div class="form-group mb-1">

        <div class="col-md-7 font-weight-bold">
           
            Choisir une Image <span class="arrowCar">▼ </span>

            <div class="p-0 m-0 alert text-body h5 font-weight-bold">

                {{ form_errors(form.slideFile) }}

            </div>
            
            <div class="mt-1 p-1 bg-warning disabled rounded">
                
                {{ form_widget(form.slideFile) }}

            </div>
        </div>
    </div>

    <div class="mt-4">
    
        <button type="submit" class="btn btn-success btn-lg h3 font-weight-bold mb-4 mr-1">Insérer l'Image</button>
    
        <a class="text-decoration-none text-white" href="{{ path('slideshow_index', {'slug': slug}) }}">
            <button type="button" class="btn btn-danger btn-lg font-weight-bold mb-4">Annuler</button>
        </a>
        
    </div>

    {{form_end(form)}}

</div>

{% endblock %}


