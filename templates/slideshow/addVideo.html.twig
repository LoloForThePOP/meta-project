{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Ajouter une Vidéo{% endblock %}

{% block body %}

    <div class="container">

        <h3 class="mt-3 font-weight-bold">Ajouter une Vidéo</h3>

        <!-- Info-Box : "Only Youtube Videos for the Moment"-->

        <div class="card border-primary mb-3" style="max-width: 30rem;">
            <div class="card-body p-3">
                <p class="card-text h5 font-weight-bold">On veut faire mieux mais pour l'instant seules des vidéos youtube peuvent être insérées. Merci de votre compréhension</p>
            </div>
        </div>
        

         <!-- Info-Box : How To ? : Insert a Youtube Video-->


        <div class="card border-primary mb-3" style="max-width: 35rem;">
            
            <div class="card-header">
                <h5 class="font-weight-bold">Comment Intégrer une Vidéo Youtube?</h5>
            </div>

            <div class="card-body">
                <h5 class="card-title font-weight-bold">Aller sur la page youtube de votre vidéo, puis recopier le code situé comme dans l'exemple ci-dessous :</h5>
                <p class="h5 card-text font-weight-bold">  https://www.youtube.com/watch?v=<span class=" px-1 border border-2 border-danger rounded">4wFs1cZFzNY</span></p>
            </div>

        </div>

        <!-- Youtube Video Code Text Input-->

         {{form_start(form)}}

         <div class="p-0 h4 col-sm-7">
              {{form_widget(form)}}
         </div>
     
         <div class="mt-4">
         
             <button type="submit" class="btn btn-success btn-lg h3 font-weight-bold mb-4 mr-1">Intégrer la vidéo</button>
         
             <a class="text-decoration-none text-white" href="{{ path('slideshow_index', {'slug': slug}) }}">
                 <button type="button" class="btn btn-danger btn-lg font-weight-bold mb-4">Annuler</button>
             </a>
             
         </div>
     
         {{form_end(form)}}

    </div>


{% endblock %}

