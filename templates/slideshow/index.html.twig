{% extends 'base.html.twig' %}

{% block title %}Diaporama de Présentation{% endblock %}

{% block sidebar %} {% include 'partials/sidebar.html.twig' %}{% endblock %}

{% block body %}

    <div class="container">


        <!-- Title Container with Collapsible Info-Box -->

        <div class="mt-md-5 mb-4">

            <!-- ui page title -->

            <h3 class="h3 font-weight-bold d-inline mr-3">Diaporama de présentation</h3>

            <!-- Display an Info-Box if Empty Slideshow -->

            {% if presentation.slides | length == 0 %}

                <!-- collapsable advice -->	

                <a class="font-weight-bold my-1 d-inline" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">

                    <span class="btn btn-light fs-15 h5 sharp p-1 px-2" style="letter-spacing: 2px;"> Info </span>
                    
                </a>
                    
                <div class="collapse col-md-6 mt-0 mb-4" id="collapseExample">

                    <p class="lh-2 h5">Images, schémas, diapositives textes et vidéos sont un Moyen RAPIDE ET EFFICACE pour <strong>transmettre vos Idées</strong> .</p>

                </div>


            {% endif %}

        </div>


        <!-- Slide Thumbnails Grid -->

        <div class="container mb-3">

            <div id="gridDemo" class="row col-md-8 pl-0">

                {% if presentation.slides | length > 0 %}

                {% for slide in presentation.slides %}

                    <!-- Thumbnail Container -->

                    <div id="{{slide.id}}" class="js-sortableGridItem d-flex align-items-center justify-content-center position-relative m-2 p-3 border border-primary border-5 rounded-lg overflow-hidden cursor-pointer" style="width:130px; height:123px; border-color: #5a74ff !important;">

                        {% if slide.mediaType == 'image' %}

                            <a href="{{path('slideshow_image_edit', {'slug':slug,'id_slide' : slide.id })}}" class="text-body text-decoration-none">

                                <img src="/images/projects/slides_images/{{slide.slideName}}" alt="{{slide.slideName}}" height="" width="100%">
                            </a>

                        {% elseif slide.mediaType == 'video' %}

                            <a href="{{path('slideshow_video_edit', {'slug':slug, 'presentation': presentation, 'id_slide' : slide.id })}}" class="text-body text-decoration-none">
                                
                                <img src="{{slide.thumbnail}}" alt="{{slide.slideName}}" height="" width="100%">

                                <!-- ui css video icon -->

                                <span class="position-absolute rounded-circle bg-danger p-2" style="bottom:3px; left:3px;"> </span> 



                            </a>
                            


                        {% elseif slide.mediaType == 'text' %}

                        <a href="{{path('slideshow_text_edit', {'slug':slug,'slide_id' : slide.id })}}" class="text-body text-decoration-none">

                            <div class="text-break p-1 cursor-pointer" style="width:100%; line-height:1.15em;">

                                {{slide.textContent|striptags|length > 20 ? slide.textContent|striptags|slice(0,20)|striptags : slide.textContent|raw }}
                                {{slide.textContent|striptags|length > 20 ? '...' : ''}}

                            </div>

                        </a>

                                    
                        {% endif %}

                        <!-- Remove Slide button (a red cross on each slide) -->
        
                        <button type="button" class="js-delete-slide d-inline position-absolute btn btn-danger" data-id="{{slide.id}}" style="top:0; right:0;"><span class="font-weight-bold">X</span></button>

                    </div>

                {% endfor %}

                {% endif %}
                                    
                <!-- Add New Slide Button (Open a Modal)  -->
                    
                <div id="newSlide" data-toggle="modal" data-target="#chooseSlideTypeModal" class="disabled rounded-lg ignore-elements d-flex align-items-center justify-content-center position-relative m-2 p-3 rounded-lg cursor-pointer" style="text-align:center; width:130px; height:123px; border: dashed 5px #5a74ff;">
                
                    <span style="font-size:4em; font-weight:700; color:rgb(46, 138, 46);">+</span>
                
                </div>    

                <!-- ui Modal Box to Choose Which Slide Type to Insert -->

                {% include '/slideshow/partials/_chooseSlideTypeAdd.html.twig' %}

            </div>

        </div>

        <!-- Back Button -->

        <a class="text-decoration-none text-white" href="{{ path('edit_presentation_menu', {'slug': presentation.slug }) }}">
            <button type="button" class="btn btn-info btn-lg font-weight-bold mt-2 mb-4 sharp">Retour</button>
        </a>

    </div>

{% endblock %}

{% block javascripts %}

    <!-- sortable plugin in order to reorder slides -->

    <script src="/js/sortable/sortable.min.js"></script>

    <!-- jQuerySupport for this sortable plugin -->
    
    <script src="/js/sortable/jquery-sortable.js"></script>
       
    <script>

        $(document).ready(function(){

            // When Click on New Item Button, we display a Slide Type Select Modal Box

            $('#newSlide').on('click', function (){

    
               $('#chooseSlideTypeModal').modal('show');

            });

            // Allow drag and drop slides reorder (front-end)
            // and manage an ajax request to update slides positions (back-end)


            $('#gridDemo').sortable({

                animation: 150,

                ghostClass: 'blue-background-class',

                filter: ".disabled",

                onMove: function (evt) {
                    return evt.related.className.indexOf('disabled') === -1;
                },

                // when drag and drop, ajax call, slide reorder

                onEnd: function (evt) {

                    // an array storing slides id position

                    var slidesPosition = [];

                    
                    $('#gridDemo div.js-sortableGridItem').each(function(index){
                        
                        slidesPosition.push($(this).attr('id'));
                   
                    });

                    jsonSlidesPosition = JSON.stringify(slidesPosition);
                    
                    $.ajax({  
                        url: "{{path('ajax_reorder_slides', {'slug': presentation.slug})}}",
                        type:       'POST',   
                        dataType:   'json',
                        data: {
                            "jsonSlidesPosition": jsonSlidesPosition,
                        },
    
                        async: true,  
                        
                        success: function(data, status) {
                                 
                        },  
    
                        error : function(xhr, textStatus, errorThrown) {  
                            // alert('Ajax request failed.');  
                        }  
                     }); 

                },
            });

            // Remove a Diapo

               $('#gridDemo').on('click', '.js-delete-slide', function (){

                var idSlide = $(this).attr("data-id");

                if (confirm("Confimer la suppression de cette diapo?"))
                {

                $(this).html('<div class="loader"></div>');
                    
                $.ajax({  

                    url: "{{path('ajax_delete_slide', {'slug': presentation.slug}) }}",
                    type:       'POST',   
                    dataType:   'json',
                    
                    data: {
                      "idSlide": idSlide,
                    },

                    async: true,  
                    
                    success: function(data, status) {


                        $("#gridDemo #"+idSlide).remove();
                       
                    },  

                    error : function(xhr, textStatus, errorThrown) {  
                        // alert('Ajax request failed.');  
                    }  
                 }); 
                    
                }


            });








        }); 

        
    </script>
   


{% endblock %} 
