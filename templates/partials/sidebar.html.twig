<!-- Sidebar Template  -->

<nav id="sidebar" class="">

    <ul class="list-unstyled components bg-light border border-primary mt-4">

        {% for item in sidebarItems %}

            <li class="d-flex align-items-center ">

                <a href="{{ path(item.route, {'slug':presentation.slug}) }}">  

                    <img src="/images/icons/sidebar/{{item.iconName}}" alt="{{item.iconName}} icon" class="float-left mr-md-3" height:"27px" width="27px">
 
                    {{item.name}}

                    {% if item.badge is defined %}
                    <span class="badge badge-primary font-weight-bold ml-1">{{item.badge}}</span>
                    {% endif %}
                </a>

            </li>

        {% endfor %}


    </ul>

