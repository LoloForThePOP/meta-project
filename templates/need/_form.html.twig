
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}


<div class="mt-3 mb-3 col-md-9 alert alert-light border border-primary">


{{ form_start(form) }}

    {{ form_widget(form) }}

    {# Actions Buttons #}

      <div class="my-2">

        <!-- Submit Button -->
          
        <button class="btn btn-lg btn-success sharp font-weight-bold mr-2">{{ button_label|default('Enregistrer') }}</button>

        <!-- Cancelation Button -->

        <a class="text-decoration-none text-white" href="{{ path('need_index', {'slug': slug}) }}">
            <button type="button" class="btn btn-info btn-lg sharp font-weight-bold">Annuler</button>
        </a>

      </div>


{{ form_end(form) }}

</div>
