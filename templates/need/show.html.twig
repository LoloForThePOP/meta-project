{% extends 'base.html.twig' %}

{% block title %}Affichage d'un Besoin{% endblock %}

{% block body %}

    <div class="my-3 px-3 col-sm-8">

        <table class="table">
            <tbody>

                <tr>
                    <th class="font-weight-bold h5">Titre</th>
                    <td>
                        <h2 class="font-weight-bold h4">{{ need.title }}</h2>

                    </td>
                </tr>

                <tr>
                    <th class="font-weight-bold h5">Date</th>
                    <td class="font-weight-bold h5">
                        Le {{ need.createdAt ? need.createdAt|date('d-m-Y H:i:s') : ''}}
                    </td>
                </tr>

                <tr>

                    <th class="font-weight-bold h5">Infos +</th>

                    <td>
                        
                        <!-- Is it a Priority ? -->
                        
                        {% if need.priority == 'priority' %}

                            {% set priority = "Priorité" %}

                            <span class="h6 p-2 font-weight-bold rounded bg-danger text-white">{{priority}}</span>

                        {% endif %}

                        <!-- Is it Paid ? -->

                        {% if need.paidService %}

                            {% set isPaid = "" %}
                      
                            {% if need.paidService == 'yes' %}
                                {% set isPaid = "Payé" %}

                            {% elseif need.paidService == 'no' %}
                                {% set isPaid = "Non Payé" %}

                            {% elseif need.paidService == 'maybe' %}
                                {% set isPaid = "Peut-être Payé" %}
                            
                            {% endif %}
                        
                            <span class="h6 p-2 font-weight-bold rounded bg-primary text-white">{{isPaid}}</span>
   
                        {% endif %}

                    </td>
                </tr>

                
                <tr>
                    <th class="font-weight-bold h5">Description</th>
                    <td class="h5">{{ need.description}}</td>
                </tr>
            
            </tbody>
        </table>

        <div class="p-0 m-3">

            <a class="btn btn-success btn-lg font-weight-bold mr-1" href="#">Envoyer un Message</a>

            <a class="btn btn-warning btn-lg font-weight-bold mr-1" href="{{ path('need_edit', {'id': need.id, 'slug': slug}) }}">Modifier</a>

            <a class="btn btn-info btn-lg font-weight-bold" href="{{ path('need_index',{'slug': slug}) }}">Retour</a>

            {{ include('need/_delete_form.html.twig') }}
        
            {% if app.user and app.user == presentation.creator %}
            
            {% endif %}
        
        </div>       

    </div>





{% endblock %}
