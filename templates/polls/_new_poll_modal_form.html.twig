
<div class="modal" id="newPollFormModal" tabindex="-1" role="dialog" aria-labelledby="newPollFormModal" aria-hidden="true">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel"></h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">

                {{ form_start(addPollForm) }}

                {{ form_widget(addPollForm) }}

            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-info sharp font-weight-bold" data-dismiss="modal">Retour</button>         

                <button class="btn btn-success sharp bg-green font-weight-bold">Valider</button>
                
            </div>

            {{ form_end(addPollForm) }}

        </div>

    </div>

</div>

{% block javascripts %}


    <script>

        {% if not addPollForm.vars.valid %}

            $('#newPollFormModal').modal('show');
            
        {% endif %}

    </script>


{% endblock %}



