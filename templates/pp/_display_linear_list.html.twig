
<div class="cursor-pointer col-md-7 mb-3 pl-0">
    <div class="card border-left-info shadow-sm h-100">
        <div class="card-body p-3">
            <a class="text-primary text-decoration-none" href="{{path('project_show',{'slug': presentation.slug})}}">
    
                    <div class="">
    
                        <!-- Project Goal -->
    
                            <h6 class="projectTitle font-weight-bold mb-0" style="font-size:1.25em">
                                {{presentation.goal[:1] | upper ~ presentation.goal[1:] | slice(0, 140)}}{% if presentation.goal | length > 141 %}...{% endif %}
                            </h6>

                        <!-- Project Title -->

                            {% if presentation.title is not empty %}
                                <h6 class="font-weight-bold mb-0 fs-15">{{ presentation.title[:1] | upper ~ presentation.title[1:] | slice(0, 63)}}</h6>
                            {% endif %}


                             
                        <!-- Project Keywords -->
                        {% if presentation.keywords | length > 0 %}
                        <div class="keywords font-weight-bold my-1 h6 text-left" style="line-height:1.05em;" >


                            <span class="text-break">
                               #{{presentation.keywords | replace({" " : "", "," : " #"}) | slice(0, 64) | capitalize}}
                            </span>


                        </div>
                    {% endif %}

                            

    
                    </div>
                    
    
            </a>
        </div>
    </div>
    </div>