
<!-- Project Websites Display -->

{% if presentation.websites | length > 0 %}

    <!-- Whole Structure Container -->

    <div class="pp-struct-container pb-2">

        <!-- Title Container -->

        <div class="mb-3">

            <h2 class="h3 pp-struct-title d-inline mr-2">Sites web</h2>
                                    
            <!-- Edit Project Title Button -->
    
            {% if app.user and app.user == presentation.creator %}
                <a href="{{ path('websites_index', {'slug': presentation.slug}) }}" class="">
    
                    <button class="btn btn-light sharp font-weight-bold mb-2 d-inline fs-15">GÃ©rer les sites web</button>
                    
                </a>
            {% endif %}

        </div>

        <!-- Project Websites Grid Display -->


        <style>

            
            .pp-website-card, .pp-website-card >* {

                background-color: white;
            }

            .pp-website-card:hover, .pp-website-card:hover a{
                background-color:rgb(251, 250, 240) !important;
            }

        </style>

        <div class="row pl-md-3">

             {% for website in presentation.websites %}

                <div class="pp-website-card cursor-pointer col-sm-5 pl-md-3 border border-primary p-1 mb-4 mr-md-4 d-flex align-items-center justify-content-around" style="overflow-wrap: break-word;">

                    <a href="{{website.url}}" class="list-group-item border-0 flex-column align-items-start text-decoration-none text-body p-1">

                        <div class="p-1 w-100">

                            {% if website.description is not null %}

                                <h5 class="mb-1 font-weight-bold">
                                    
                                    {{website.description | slice(0,50)}}

                                    {% if website.description | length > 50 %}
                                    ...
                                    {% endif %}

                                </h5>

                            {% endif %}

                            <p class="mb-1 fs-15">

                                {{website.url | slice(0,50)}}

                                {% if website.url | length > 50 %}
                                (...)
                                {% endif %}
                            
                            </p>

                        </div>
                    </a>

                </div>
            {% endfor %}

        </div>

    </div>

{% endif %}

