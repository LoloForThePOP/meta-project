<!-- Project News Display -->

{% if presentation.news | length > 0 %}

    <!-- Structure Container -->

    <div id="newsDisplay" class="pp-struct-container pp-struct-needs">

        <!-- Title Container -->

        <div class="pp-struct-title-container d-md-flex align-item-center">

            <!-- Structure Icon
            
            <img class="pp-struct-icon" src="/images/icons/consult_presentation/news.svg" height="32" width="32" alt="news icon"> -->
            
             <!-- Structure Title -->

            <h3 class="pp-struct-title d-inline mr-2">

                Informations

                
            </h3>
            
           
                    
            <!-- Manage Project News Button -->

            {% if is_granted('edit', presentation) %}

                <!-- Create News Button -->

                <a class="pp-edition-mode" href="{{ path('create_news', {'slug':presentation.slug}) }}">

                    <button type="button" class="btn btn-light font-weight-bold fs-15 mr-2">

                        <span class="h5">+</span>  

                    </button>

                </a>

                 <!-- Manage News Button -->
        

                <a class="pp-edition-mode" href="{{ path('manage_news', {'slug': presentation.slug}) }}">

                    <button class="btn btn-light sharp font-weight-bold fs-15">Gérer les actualités</button>
                    
                </a>

            {% endif %}

        </div>

        <!-- News List Display (single-div vertical timeline) (thank you Niels Voogt & codepen) -->
        
        {% include 'pp/partials/_news/_list_display.html.twig' %}

        <!-- News Details Display (in a modal box) -->
        
        {% include 'pp/partials/_news/_details_display.html.twig' %}

        <!-- News Multimedia Display (in a lightbox) -->
        
        {% include 'pp/partials/_news/_multimedia_display.html.twig' %}
        
        <!-- Manage modalbox content and lightbox content (javascript) -->
        <!-- See templates\pp\js_show\_news.html.twig -->
        


    </div>
  
        
    
    {% endif %}
    
    
    <!-- Some Style -->


