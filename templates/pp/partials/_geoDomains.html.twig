{% if presentation.geoDomains | length > 0 %}

    <div class="container pl-0 my-3">

        <h3 class="font-weight-bolder d-inline mr-2">Lieux du projet</h3>

        <!-- Edit Geodomains Button -->

        {% if app.user and app.user == presentation.creator %}
            <a href="{{ path('geodomains_places_manage', {'slug': presentation.slug}) }}" class="">

                <button class="btn btn-light sharp font-weight-bold mb-2 d-inline fs-15">Gérer les Lieux</button>
                
            </a>
        {% endif %}

        <ul class="list-group pt-3">

            {% for place in presentation.geoDomains | slice(0, 3) %}


                <li class="list-group-item py-1 border-0">
                    
                    <span class="arrowCar font-weight-bold h5">
                        ▼
                    </span>
                    
                    <span class="font-weight-bold h5">
                        {{place.placeName}}
                    </span>
                    
                    <span class="font-weight-bold h5 mr-2">

                        {% if not place.postalCode == '' %}
                            ({{place.postalCode}})
                        {% endif %}
                       
                    </span>
                
                </li>

            {% endfor %}

            {% if presentation.geoDomains | length > 3 %}
                <li class="list-group-item py-1 border-0">...</li>
            {% endif %}

          </ul>

    </div>

{% endif %}