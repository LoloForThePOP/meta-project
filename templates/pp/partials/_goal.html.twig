
<!-- Project Goal Presentation -->


    <!-- Project Goal Text Display -->
    
    <h4 class="pp-project-goal d-inline-block mr-0 mr-md-3 
        
        {% if presentation.title is empty %} untitledProject
        {% endif %}
    ">
        
        {{ presentation.goal[:1] | upper ~ presentation.goal[1:] }}

        <!-- Edit Project Goal Button -->

        {% if is_granted('edit', presentation) %}

            <a class="pp-edition-mode ml-3 ml-md-0" href="{{ path('project_edit', {'slug': presentation.slug}) }}">

                <button class="btn btn-light btn-sm sharp font-weight-bold fs-15" style="font-size:13px !important;">Ã‰diter</button>

                <!-- <img class="editIcon img-fluid" src="/images/icons/edit_presentation/edit.svg" height="18" width="18" alt="edit icon" > -->
                
            </a>

        {% endif %}
        
    </h4>




    <!-- Some Styles -->

    <style>

        .pp-project-goal{

            font-size: 1.45em;
            font-family: Tahoma, Geneva, Verdana, sans-serif;

        }

        .untitledProject{

            font-size: 1.7em !important;

        } 

        @media screen and (max-width: 580px) {

            .pp-project-goal{

                font-size: 1.1em;
                font-weight: normal;
            }
                
            .untitledProject{

                font-size: 1.3em !important;

            }

        }

    </style>
