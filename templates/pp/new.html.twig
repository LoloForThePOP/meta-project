{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block title %}Ajouter un Projet{% endblock %}

{% block body %}

    <div class="container">

       <!--  <h3 class="font-weight-bold my-3">Ajouter un Projet</h3> -->

        <div class="row mt-5">

            <div class="col-md-8">
                            
        {{form_start(form)}}

        <!-- Project Goal -->

        <div class="mb-3">

            {{form_errors(form.goal)}}

            {{form_label(form.goal)}}
         
            {{form_widget(form.goal)}}

        </div>

        <div class="card shadow mb-4">
            <div class="card-body p-3">
                <h4 class="mb-3">Exemples</h4>
                <!-- Unordered list -->
                <ul class="fs-15">
                    <li class="mb-2">Restaurer un moulin</li>
                    <li class="mb-2">Développer un jeu vidéo d'action</li>
                    <!-- <li class="mb-2">Installer une pompe dans un village</li> -->
                    <li class="mb-2">Créer un journal d'investigation</li>
                </ul>
            </div>
        </div>

        <!-- Project Title -->

        {# <div class="mb-3">

            {{form_row(form.title)}}

        </div>

        #}
        
        <div class="mb-3">

            <button type="submit" class="btn btn-success btn-lg font-weight-bold mb-4">Ajouter le Projet</button>

            <a href="{{ path('homepage') }}">
                <button type="button" class="btn btn-info btn-lg font-weight-bold mb-4">Annuler</button>
            </a>
        
            

        </div>

       


        {# don't render logo and thumbnails fields #}

        <div class="d-none">
            {{ form_rest(form) }}
        </div>





        {{ form_end(form) }}


            </div>
        </div>


    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}