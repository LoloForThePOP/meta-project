{% extends 'base.html.twig' %}

{% block title %}{{ presentation.title }}{% endblock %}


{% block sidebar %} {% include 'partials/sidebar.html.twig' %} {% endblock %}


{% block body %}


<style>

  
.cat-menu-title {
  color:#0051fc !important;
  font-size: 1.15em;
  font-weight:bold;
  text-transform: uppercase;
  text-align:center;
  margin-bottom:15px;
}

</style>

    <div class="container pl-md-4">

        <div class="container-fluid mt-4">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-2">
              
              <!-- <h1 class="h3 mb-0 text-gray-800">Tableau de Bord</h1> -->
            
            </div>
  
            <!-- Content Row -->

            <div class="row">
  
              <!-- Project Geodomains -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">
                <a class="text-body" href="{{ path('geodomains_places_manage', {'slug':presentation.slug}) }}">

                  <div class="card border-left-primary shadow h-100 py-2">

                  <div class="card-body">

                    <div class="row no-gutters">

                      <!-- Icon Area -->

                      <div class="col-auto mr-3">
                        <span style="color: DarkGreen">
                          <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i>
                        </span>
                        
                      </div>

                      <!-- Title & Informations Display  -->

                      <div class="col">

                        <div class="cat-menu-title text-center mb-1">Lieux du Projet</div>

                        <div class="h5 mb-0 text-gray-800 text-center">

                          {% if presentation.geodomains | length == 0 %}

                            <span class="d-block mt-3">
                              Monde entier
                            </span>

                          {% else %}
                          
                           <ul class="list-group pl-0 text-left">

                            {% for place in presentation.geoDomains | slice(0, 3) %}

                                <li class="list-group-item my-0 py-0 border-0 h6 pl-0">
                                  <span class="font-weight-bold">
                                    {{place.placeName}}
                                  </span>
                                </li>
                            {% endfor %}

                            {% if presentation.geodomains | length > 3 %}
                              <li class="list-group-item my-0 py-0 border-0 h6 pl-0">
                                ...
                              </li>
                            {% endif %}

                            </ul>

                          {% endif %}
                      
                        </div>
                      </div>

                    </div>

                  </div>

                </div>

                </a>
                
              </div>
  
              <!-- Project Description Text;  Images & Videos -->
              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">
               
                  <div class="card border-left-info shadow h-100 py-2">

                    <div class="card-body">
                                  
                      <!-- Project Text Description -->

                      <a class="text-decoration-none text-body" href="{{ path('edit_text_description', {'slug':presentation.slug}) }}">

                        <div class="row no-gutters">
                          <div class="col">

                            <div class="cat-menu-title mb-2">

                              Description du Projet

                            </div>

                            <div class="row no-gutters d-flex justify-content-center">

                                <div class="h6 font-weight-bold mb-1 text-center">

                                  {% if presentation.textDescription | length == 0 or presentation.textDescription.content is empty %}

                                    <span class="text-danger" style="font-size:1.15em;">
                                      !!! Aucune description texte associée à ce projet !!!
                                    </span>

                                  {% else %}

                                    <span class="" style="font-size:1.15em;">
                                      1 texte présenté
                                    </span>

                                  {% endif %}


                                </div>

                            </div>

                          </div>

                        </div>

                      </a>

                      <!-- Separation (Horizontal Rule) -->

                      <hr class="my-2 mx-1 border-4">

                      <!-- Project Images & Videos -->

                      <a class="text-decoration-none text-body" href="{{ path('slideshow_index', {'slug':presentation.slug}) }}">
                          
                        <div class="row no-gutters d-flex justify-content-center">

                            <div class="cat-menu-title mb-2">Images & Vidéos</div>

                            <div class="row no-gutters text-center">

                              <div class="h6 font-weight-bold mb-0" >

                                {% if presentation.slides | length == 0 %}

                                  <span class="text-danger" style="font-size:1.15em;">
                                    !!! Pas d'image ou vidéo associée à ce projet !!!
                                  </span>

                                {% endif %}

                            {% if presentation.slides | length > 0 %}

                              {% set slideCount = presentation.slides | length %}

                              {% if slideCount == 1 %}

                                <span class="fs-15">1 image ou vidéo de présentation</span>
                                
                              {% else %}
                              
                                <span class="fs-15">

                                  {{slideCount}}

                                  image/s ou vidéo/s présentées

                                </span> 

                                
                              {% endif %}


                            {% endif %}
                                  
                                </div>

                            </div>

                          </div>

                      </a>

                    </div>

                </div>
                
              </div>
  
              <!-- Project Documents -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">

                <a class="text-decoration-none text-body" href="{{ path('manage_documents', {'slug':presentation.slug}) }}">

                  <div class="card border-left-info shadow h-100 py-2">

                    <div class="card-body">

                      <div class="row no-gutters align-items-center">

                        <div class="col">

                          <div class="cat-menu-title text-xs text-center font-weight-bold" >

                            <span class="text-uppercase">Documents</span>
                                              
                          </div>

                          <div class="row no-gutters d-flex justify-content-center">

                              <div class="h6 font-weight-bold">

                                
                                  {% if presentation.documents | length == 0 %}
    
                                    <span class="fs-15">
                                      Pas de document présenté
                                    </span>
    
                                  {% elseif presentation.documents | length == 1  %}
    
                                    <span class="fs-15">
                                      1 document présenté
                                    </span>
    
                                  {% else %}
    
                                    <span class="fs-15">
    
                                      {{ presentation.documents | length }}
    
                                      documents présentés
    
                                    </span>
    
                                  {% endif %}

                                </div>
                              </div>
                            </div>
                          </div>
                    </div>

                  </div>

                </a>
      
              </div>
  
              <!-- Project Q&A -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">
                <a class="text-decoration-none text-body" href="{{ path('qa_manage', {'slug':presentation.slug}) }}">
                  <div class="card border-left-info shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">

                        <div class="cat-menu-title text-xs text-center font-weight-bold" >

                          <span class="text-uppercase">Questions & Réponses</span>
                                            
                        </div>

                        <div class="row no-gutters d-flex justify-content-center">

                            <div class="h6 font-weight-bold">

                              
                                {% if presentation.questionAnswers | length == 0 %}
  
                                  <span class="fs-15">
                                    Pas de Question / Réponse
                                  </span>
  
                                {% elseif presentation.questionAnswers | length == 1  %}
  
                                  <span class="fs-15">
                                    1 Question / Réponse
                                  </span>
  
                                {% else %}
  
                                  <span class="fs-15">
  
                                    {{ presentation.questionAnswers | length }}
  
                                    Questions / Réponses
  
                                  </span>
  
                                {% endif %}

                              </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                </a>
                
              </div>
  
              <!-- Contact Informations -->
              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">
                <a class='text-body' href="{{ path('contact_index', {'slug':presentation.slug}) }}">
                  <div class="card border-left-info shadow h-100 py-2">

                  <div class="card-body">

                    <div class="row no-gutters align-items-center">

                      <div class="col">

                        <div class="cat-menu-title mb-md-3">Infos de Contact</div>

                        <div class="row no-gutters">

                            <div class="h6 font-weight-bold text-center">

                              {% if presentation.contacts | length == 0 %}

                                <span class="fs-15">
                                  Pas d'information de contact présentée
                                </span>

                              {% elseif presentation.contacts | length == 1 %}
                                
                                <span class="fs-15">
                                  1 zone présentée
                                </span>

                              {% else %}

                              <span class="fs-15">

                                 {{presentation.contacts | length}} zones présentées

                              </span>
                                
                               
 
                              {% endif %}

                              </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                </a>
                
              </div>
               
              <!-- Project Goal; Title; and Logo -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">
                <a class="text-body" href="{{ path('project_edit', {'slug':presentation.slug}) }}">
                  <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body pb-0">

                      <div class="row no-gutters align-items-center">
                        <div class="col">

                          <div class="cat-menu-title text-center mb-2">Objectif & Titre du Projet</div>

                        </div>
                      
                      </div>

                      <hr class="mt-1 mb-2 mx-1 border-4">
                      
                      <div class="row no-gutters">
                        
                        <div class="col pt-2 mr-2">

                          <div class="cat-menu-title text-center mb-2">Logo du Projet</div>

                          <div class="row no-gutters d-flex justify-content-center">

                            {% if presentation.logoName | length == 0 %}
                              
                            <div class="h6 font-weight-bold">
              
                                  <span class="fs-15 text-center">
                                    Pas de logo associé à ce projet
                                  </span>

                            </div>

                            {% else %}

                              <img id="" class="mx-auto mb-2" src="/images/projects/logos/{{presentation.logoName}}" alt="Project Logo" width="80" height="80">      

                            {% endif %}
                              
                          </div>
                        </div>
                      
                      </div>
                    </div>
                  </div>
                </a>
                
              </div>

              <!-- Project Needs -->
              
              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">

                <a class="text-body" href="{{ path('need_index', {'slug':presentation.slug}) }}">

                  <div class="card border-left-info shadow h-100 py-2">

                  <div class="card-body">

                    <div class="row no-gutters d-flex justify-content-center">

                        <div class="cat-menu-title mb-md-5">Besoins du Projet</div>

                        <div class="row no-gutters text-center">

                            <div class="h6 font-weight-bold  d-flex justify-content-center">

                              {% if presentation.needs | length == 0 %}

                                <span class="fs-15">
                                  Aucun besoin présenté pour ce projet
                                </span>

                              {% elseif presentation.needs | length == 1  %}

                                <span class="fs-15">
                                  1 besoin présenté
                                </span>

                              {% else %}

                                <span class="fs-15">

                                  {{ presentation.needs | length }}

                                  besoins présentés

                                </span>

                              {% endif %}

                              </div>
                        </div>
                    </div>
                  </div>
                </div>

                </a>
                
              </div>
              
              <!-- Project Categories and Keywords -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">

                <a class="text-body" href="{{ path('index_categories', {'slug':presentation.slug}) }}">
                  <div class="card border-left-info shadow h-100 py-2">

                    <div class="card-body">

                      <!-- Project Categories -->

                      <div class="row no-gutters text-center">

                        <div class="col">
  
                          <div class="cat-menu-title mb-2 ">Catégories du Projet</div>
  
                          <div class="row no-gutters">
  
                              <div class="h6 font-weight-bold mb-1">
  
                                {% if presentation.categories | length == 0 %}
  
                                  <span class="text-danger" style="font-size:1.15em;">
                                    !!! Aucune catégorie associée à ce projet !!!
                                  </span>
  
                                {% else %}
  
                                  {% for category in presentation.categories | slice (0,5) %}
  
                                    <img id="" class="mr-2 mb-2" src="/images/icons/categories/{{category.name}}.svg" alt="{{category.name}}" width="30" height="30">
  
                                  {% endfor %}
  
                                  {% if presentation.categories | length > 5 %}
  
                                    <span class="h5 font-weight-bold">...</span>
                                  
                                  {% endif %}
   
                                {% endif %}
  
                                </div>
                          </div>
                        </div>
                      </div>

                      <hr class="my-3 mx-1 border-4">

                      <!-- Project Keywords -->

                      <div class="row no-gutters d-flex justify-content-center">
  
                          <div class="cat-menu-title mb-2">Mots-Clés du Projet</div>
  
                          <div class="row no-gutters">
  
                            <div class="h6 font-weight-bold mb-0" >
                                                        
                                {% if presentation.keywords | length > 0 %}
  
                                  <span class="text-break">

                                    #{{presentation.keywords | replace({"," : " #", " " : ""}) | slice(0, 64) }}
                                    
                                  </span>
                                    
  
                                  {% if presentation.keywords | length > 64 %}

                                    ...

                                  {% endif %}
  
                                {% else %}
                                  
                                  <span class="text-danger fs-15">

                                    !!! Aucun mot-clé utilisé !!!

                                  </span>
  
                                {% endif %}
                                
                              </div>
  
                          </div>

                        </div>

                    </div>
                  </div>
                </a>
                
              </div>

              <!-- Project Websites -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer">
                <a class="text-body" href="{{ path('websites_index', {'slug':presentation.slug}) }}">
                  <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body ">

                      <div class="row no-gutters d-flex justify-content-center align-items-center">

                        <div class="col">
  
                          <div class="cat-menu-title mb-md-4">Sites Web & réseaux sociaux</div>
  
                          <div class="row no-gutters d-flex justify-content-center">
  
                              <div class="h6 font-weight-bold">
  
                                {% if presentation.websites | length == 0 %}
  
                                  <span class="fs-15">
                                    Pas de site web associé
                                  </span>
  
                                {% elseif presentation.websites | length == 1  %}
  
                                  <span class="fs-15">
                                    1 site web (ou réseau social)
                                  </span>
  
                                {% else %}
  
                                  <span class="fs-15">
  
                                    {{ presentation.websites | length }}
  
                                    sites webs (ou réseaux sociaux)
  
                                  </span>
  
                                {% endif %}
  
                                </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
                
              </div>

              <!-- Display Project Presentation -->

              <div class="col-xl-4 col-md-6 mb-4 cursor-pointer rounded-circle">
                <a class="text-body" href="{{ path('project_show', {'slug':presentation.slug}) }}">
                  <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body d-flex align-items-center justify-content-center">
                      
                      <div class="row no-gutters">
                        <div class="col mr-2">
  
                          <div class="cat-menu-title mb-md-4 ">Voir le Résultat</div>
    
                            <div class="row no-gutters">
    
                              <img src="/images/icons/sidebar/presentation.svg" alt="See result icon" class="mx-auto" height:"65px" width="65px">


                            </div>
                        </div>
                      </div>


                    </div>
                  </div>
                </a>
                
              </div>





            </div>

  
          </div>

    </div>

{% endblock %}