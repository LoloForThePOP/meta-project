               
<!-- Project Categories and Keywords -->

<a class=" hoverZone text-body" href="{{ path('index_categories', {'slug':presentation.slug}) }}">

  <div class="hoverZone card border-left-info shadow py-2 mb-3">

    <div class="card-body">

      <!-- Project Categories -->

      <div class=" row no-gutters text-center">

        <!-- Icon Left Column-->
                      
        <div class="col-auto d-flex align-items-center justify-content-center ml-2">
          
          <span style="color: DarkGreen">
          <!--  <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i> -->
            <img src="/images/icons/edit_presentation/menu/categories.svg" width="37px" height="37px" alt="">
          </span>
          
        </div>

        <!-- Title Middle Column -->
        
        <div class="col d-flex align-items-center justify-content-center">

          <div class="cat-menu-title text-xs" >

            <span class="text-uppercase">Catégories du Projet</span>
                              
          </div>
  
        </div>

        <!-- Counter (Third Column) -->

        <div class="col-auto d-flex align-items-center justify-content-center ml-2">

          {% if presentation.categories | length == 0 %}

          <span class="badgeCount badge badge-light text-danger">0</span>

          {% else %}

            <span class="badgeCount badge badge-light">
                {{ presentation.categories | length }}
            </span>

          {% endif %}

        </div>

      </div>

      <!-- Line Separator -->

      <hr class="my-3 mx-1 border-4">

      <!-- Project Keywords -->
      
      <div class="row no-gutters text-center">

        <!-- Icon Left Column-->
                      
        <div class="col-auto d-flex align-items-center justify-content-center ml-2">
          
          <span style="color: DarkGreen">
          <!--  <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i> -->
            <!-- <img src="/images/icons/sidebar/settings.svg" width="37px" height="37px" alt=""> -->
          </span>
          
        </div>

        <!-- Title Middle Column -->
        
        <div class="col">

          <div class="cat-menu-title row text-xs d-flex align-items-center justify-content-center" >

            <span class="text-uppercase">Mots-Clés</span>
          
          </div>

          <!-- We Display Some Keywords -->

          <div class="row font-weight-bold  d-flex align-items-center justify-content-center">

              {% if presentation.keywords | length > 0 %}

                <span class="text-break">

                  #{{presentation.keywords | replace({"," : " #", " " : ""}) | slice(0, 64) }}
                  
                </span>
                    
                {% if presentation.keywords | length > 64 %}

                  ...

                {% endif %}

              {% endif %}
                              
          </div>
  
        </div>

        <!-- Counter (Third Column) -->

        <div class="col-auto d-flex align-items-center justify-content-center ml-2">

          {% if presentation.keywords | length == 0 %}

          <span class="badgeCount badge badge-light text-danger">0</span>

          {% else %}

            <span class="badgeCount badge badge-light">

                {{ presentation.keywords | split(',') | length }}
            </span>

          {% endif %}

        </div>

      </div>

    </div>

  </div>

</a>
