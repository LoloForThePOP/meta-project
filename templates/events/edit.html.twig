{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}Modifier un événement / date{% endblock %}

{% block sidebar %}{% include 'partials/sidebar.html.twig' %}{% endblock %}


{% block body %}
    
    <!-- Content Container -->

    <div class="container">

        <!-- Title Container -->

        <div class="mt-3 mt-md-5 mb-2">

            <!-- ui Page Title -->

            <h3 class="font-weight-bold d-inline mr-3">Modifier un événement - date</h3>
     
        </div>


        <!-- Form Display -->

        <div class="col-md-7 mt-4 mb-4 mb-md-5 pl-0">


                {{ form_start(form) }}

                <div class="mb-5">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                </div>

                <!-- Form Set Event Begin Dates -->

                    <div class="mb-5">

                        <div class="row h5 font-weight-bold ml-md-1 mb-3 pl-3 pl-md-0">
                            Date de début (facultatif)
                        </div>

                        <div class="row mb-3">

                                <div class="col">{{ form_widget(form.beginYear) }}</div>
                                <div class="col">{{ form_widget(form.beginMonth) }}</div>
                                <div class="col"> {{ form_widget(form.beginDay) }}</div>

                        </div>

                        <div class="mb-3">

                            {{ form_label(form.beginTime) }}
                            {{ form_widget(form.beginTime) }}

                         </div>

                    </div>

                    <!-- Form Set Event End Dates -->

                    <div class="mb-5">

                        <div class="row h5 font-weight-bold ml-md-1 mb-3 pl-3 pl-md-0">
                            Date de fin (facultatif)
                        </div>

                        <div class="row mb-3">

                            <div class="col">{{ form_widget(form.endYear) }}</div>
                            <div class="col">{{ form_widget(form.endMonth) }}</div>
                            <div class="col"> {{ form_widget(form.endDay) }}</div>

                        </div>

                        <div class="">

                            {{ form_label(form.endTime) }}
                            {{ form_widget(form.endTime) }}
    
                        </div>

                    </div>





                
                            



               <div class="">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
               </div>   

               

        </div>


        <!-- Action Buttons -->

        <div>

            <button class="btn btn-success btn-lg sharp bg-green font-weight-bold mr-2">Valider</button>

            <a href="{{ path('manage_events', {'slug':slug}) }}">

                <button type="button" class="btn btn-info btn-lg sharp font-weight-bold" data-dismiss="modal">Retour</button>

            </a>

            

        </div>

        {{ form_end(form) }}

    </div>


{% endblock %}