
                                                          
    <!-- Styles for Document Icon -->

    {% set fileType, bgColor = '', '' %}

    {% if document.mimeType == 'application/pdf' or document.mimeType == 'application/x-pdf' %}

        {% set fileType = 'PDF' %}
        {% set bgColor = '#e74c3c' %}
    
    {% elseif document.mimeType == 'application/msword' or document.mimeType == 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' %}

        {% set fileType = 'WORD' %}
        {% set bgColor = '#295391' %}
    
    {% elseif  document.mimeType == 'application/vnd.ms-excel' or document.mimeType =='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' %}

        {% set fileType = 'XLS' %}

        {% set bgColor = '#2d7930' %}
    
    {% elseif document.mimeType == 'application/vnd.ms-powerpoint' or document.mimeType == 'application/vnd.openxmlformats-officedocument.presentationml.presentation' %}

        {% set fileType = 'PPT' %}

        {% set bgColor = '#e28a5c' %}
    
    {% elseif document.mimeType == 'text/rtf' %}

        {% set fileType = 'RTF' %}

        {% set bgColor = '#3746a8' %}
    
    {% elseif document.mimeType == 'application/vnd.oasis.opendocument.text' %}

        {% set fileType = 'ODOC' %}

        {% set bgColor = '#1e3a57' %}
    
    {% elseif document.mimeType == 'application/epub+zip' %}

        {% set fileType = 'EPUB' %}

        {% set bgColor = '#021230' %}

    {% else %}

        {% set fileType = 'FILE' %}

        {% set bgColor = '#000000' %}
        
    {% endif %}

    <style>

        .documentRepresentation:hover 
        {
            background-color: gainsboro;

        }

    </style>

    <!-- Documents Icon Display -->

    <div class="documentRepresentation col border border-primary" style="width:140px; height:170px;">

        <div class="row h-100">

            <!--Document "mime type" Display (vertical text) -->

            <div class="col-4 d-flex align-items-center text-white" style="background-color: {{ bgColor }};">

                <div class="font-weight-bold h4" style="word-break:break-all; width:0px;">
                    {{ fileType }}
                </div>

            </div>

            <!--Document Title (as renamed by user) -->

            <div class="col-8 h6 font-weight-bold d-flex justify-content-center align-items-center dont-break-out" style="text-transform:uppercase;">

                {{ document.title | slice (0,33) }}

                {% if document.title | length > 34 %}...{% endif %}
                

            </div>

        </div>
        
    </div> 