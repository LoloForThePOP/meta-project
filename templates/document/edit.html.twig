{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}

{% block title %}Modifier un Document{% endblock %}

{% block sidebar %}{% include 'partials/sidebar.html.twig' %}{% endblock %}


{% block body %}
    
    <!-- Content Container -->

    <div class="container">

        <!-- Title Container -->

        <div class="mt-3 mt-md-5 mb-2">

            <!-- ui Page Title -->

            <h3 class="font-weight-bold d-inline mr-3">Modifier un document</h3>
     
        </div>


        <!-- Form Display -->

        <div class="col-md-5 mt-4 mb-5 pl-0">

            {{ form_start(form) }}


            {#
                
                <div class="mt-5 mb-4">

                    <div class="mb-2 h4 font-weight-bold">

                        Choisir un autre fichier ?

                        <span class="h5 font-weight-bold">{{ form_errors(form.file) }}</span>
                        
                    </div>

                    {{ form_widget(form.file) }}

                </div>

            #}

           

            <div class="mb-3">

                <div class="mb-2 h4 font-weight-bold">

                    Donner un autre titre au document :

                    <span class="h5 font-weight-bold">{{ form_errors(form.title) }}</span>

                </div>

                {{ form_widget(form.title) }}

            </div>


        </div>


        <!-- Action Buttons -->

        <div>

            <button class="btn btn-success btn-lg sharp bg-green font-weight-bold mr-2">Valider</button>

            <a href="{{ path('manage_documents', {'slug':slug}) }}">

                <button type="button" class="btn btn-info btn-lg sharp font-weight-bold" data-dismiss="modal">Retour</button>

            </a>

            

        </div>

        {{ form_end(form) }}

    </div>


{% endblock %}