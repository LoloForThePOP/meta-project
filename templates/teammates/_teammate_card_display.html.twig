
                                                          
    <!-- Teammate Display Card Template -->


    <!-- Some Styles -->

    <style>

        

    </style>

    <!-- Teammate card -->

    <div id="{{teammate.id}}" class="">

        <!-- Teammate Name -->

        <div class="d-flex justify-content-center font-weight-bold mt-3 mb-3">

            {{ teammate.name | length < 10 ? teammate.name : teammate.name | slice(0, 10 ) ~ '...' }}

        </div>

        <!-- Teammate Description -->
        
        <div>
            
            {{ teammate.description }}

        </div>

        <!-- Teammate Image -->
        
        <div class="d-flex justify-content-center">

            {% if teammate.image %}
            
                <img class="rounded-circle border border-primary" src="{{ asset('/images/projects/teammates/' ~ teammate.image) | imagine_filter('teammate_thumbnail') }}">

            {% endif %}

            
        </div> 

        
    </div>