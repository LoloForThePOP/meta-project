{% extends 'base.html.twig' %}

{% block title %}Réglages{% endblock %}

{% block stylesheets %}<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
{% endblock %}

{% block sidebar %}{% include 'partials/sidebar.html.twig' %}{% endblock %}

{% block body %}

    <div class="container">

        <h3 class="my-3">Réglages</h3>

        <!-- Private Messages Switch Activation -->

        <div class="col-xl-3 col-md-6 mb-4 cursor-pointer">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                <div class="row no-gutters align-items-center">
                    
                    <div class="col">

                    <div class="font-weight-bold text-uppercase mb-3">Activation des Messages Privés</div>

                        <div class="h5 font-weight-bold">

                            <span class="pr-2">Non</span>
                                
                            <input id="activeContactMessagesSwitch" type="checkbox" data-toggle="toggle" data-width="80" data-on=" <b>Oui</b>" data-off="<b>Non</b>" data-onstyle="success" data-offstyle="danger"
                                    
                                {% if presentation.isActiveContactMessages %}
                                
                                    checked 
                                
                                {% endif %}

                            >
                           
                            <span class="pl-2">Oui</span>

                        </div>                           

                </div>
                </div>
                </div>
            </div>
        </div>


    </div>

{% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

    <script>

        $(document).ready(function(){ 
            
            $('#activeContactMessagesSwitch').on('change.bootstrapSwitch', function(e) {
                $.ajax({
                    method: 'POST',
                    url:  "{{path('ajax_contact_messages_activation', {'slug': presentation.slug}) }}",
                    data: {
                        'checkboxValue': e.target.checked
                    },
                    dataType: 'json',
                    success: function(data){
                    }
                });
            });

        
        });  


    </script>

{% endblock %}