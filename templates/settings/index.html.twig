{% extends 'base.html.twig' %}

{% block title %}R√©glages{% endblock %}

{% block stylesheets %}<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
{% endblock %}

{% block sidebar %}{% include 'partials/sidebar.html.twig' %}{% endblock %}

{% block body %}

    <div class="container">

        
        <!-- UI Page Title with Info Button Container -->

        <div class="mt-3 mt-md-5 mb-4">

            <!-- ui Page Title -->

            <h3 class="font-weight-bold d-inline mr-3">R√©glages</h3>
         
            <!-- collapsable advice trigger button -->	

            <a class="font-weight-bold my-1" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">

                <span class="btn btn-light fs-15 h5 sharp p-1 px-3" style="letter-spacing: 2px;">Info</span>
                
            </a>

            <!-- Collapsible Advice Container -->
    
            <div class="info-box collapse col-md-7 mt-2 mb-4" id="collapseExample">
    
                <p class="h5">
    
                    Pour activer / d√©sactiver, appuyer sur les commutateurs.
    
                </p>
    
            </div>

        </div>


        <div class="row">

            <!-- Publish Presentation, or Keep it as a Draft -->

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        
                        <div class="col">

                        <div class="font-weight-bold fs-15 text-uppercase mb-3" style="color:#0051fc;">Publier la pr√©sentation</div>

                            <div class="h5 font-weight-bold">

                                <span class="pr-2">Non</span>
                                    
                                <input id="publishPresentationSwitch" type="checkbox" data-toggle="toggle" data-width="80" data-on=" <b>Oui</b>" data-off="<b>Non</b>" data-onstyle="success" data-offstyle="danger"
                                        
                                    {% if presentation.isPublished %}
                                    
                                        checked 
                                    
                                    {% endif %}

                                >
                            
                                <span class="pl-2">Oui</span>

                            </div>                           

                    </div>
                    </div>
                    </div>
                </div>
            </div>
            
            <!-- Private Messages Switch Activation -->

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body pr-md-0">
                    <div class="row no-gutters align-items-center">
                        
                        <div class="col">

                        <div class="font-weight-bold fs-15 text-uppercase mb-3" style="color:#0051fc" >Activer les messages priv√©s</div>

                            <div class="h5 font-weight-bold">

                                <span class="pr-2">Non</span>
                                    
                                <input id="activeContactMessagesSwitch" type="checkbox" data-toggle="toggle" data-width="80" data-on=" <b>Oui</b>" data-off="<b>Non</b>" data-onstyle="success" data-offstyle="danger"
                                        
                                    {% if presentation.isActiveContactMessages %}
                                    
                                        checked 
                                    
                                    {% endif %}

                                >
                            
                                <span class="pl-2">Oui</span>

                            </div>                           

                    </div>
                    </div>
                    </div>
                </div>
            </div>


            <!-- Allow or Disallow comments for this project presentation -->

            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        
                        <div class="col">

                        <div class="font-weight-bold fs-15 text-uppercase mb-3" style="color:#0051fc;">Autoriser les commentaires</div>

                            <div class="h5 font-weight-bold">

                                <span class="pr-2">Non</span>
                                    
                                <input id="allowCommentsSwitch" type="checkbox" data-toggle="toggle" data-width="80" data-on=" <b>Oui</b>" data-off="<b>Non</b>" data-onstyle="success" data-offstyle="danger"
                                        
                                    {% if presentation.allowComments == 1 %}
                                    
                                        checked 
                                    
                                    {% endif %}

                                >
                            
                                <span class="pl-2">Oui</span>

                            </div>                           

                    </div>
                    </div>
                    </div>
                </div>
            </div>


            {% if app.user == presentation.getCreator %}
                
                <!-- Manage Project Presentation Access -->
                
                <div class="col-xl-4 col-md-6 mb-4">
                    <a href="{{ path('manage_access', {'slug':presentation.slug}) }}">
                        <div class="card border-left-warning shadow h-100 py-2 cursor-pointer">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    
                                    <div class="col">

                                        <div class="font-weight-bold fs-15 text-uppercase mb-3 mr-2" >
                                            
                                            <span class="mr-3 h4">üîë</span>
                                            <span style="color:#0051fc;"> G√©rer les acc√®s</span>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                
                <!-- Delete Presentation Page Access -->
                
                <div class="col-xl-4 col-md-6 mb-4">
                    <a href="{{ path('project_delete_page', {'slug':presentation.slug}) }}">
                        <div class="card border-left-warning shadow h-100 py-2 cursor-pointer">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    
                                    <div class="col">

                                        <div class="font-weight-bold fs-15 text-uppercase mb-3 mr-2" >

                                            <span style="color:#0051fc;">Autres</span>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                
            {% endif %}




        <!-- End Of First Row -->

        </div>


    <!-- End Of Main Container -->

    </div>

{% endblock %}


{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

    <script>

        $(document).ready(function(){ 
            
            $('#activeContactMessagesSwitch').on('change.bootstrapSwitch', function(e) {
                $.ajax({
                    method: 'POST',
                    url:  "{{path('ajax_contact_messages_activation', {'slug': presentation.slug}) }}",
                    data: {
                        'checkboxValue': e.target.checked
                    },
                    dataType: 'json',
                    success: function(data){
                    }
                });
            });
            
            
            $('#publishPresentationSwitch').on('change.bootstrapSwitch', function(e) {
                $.ajax({
                    method: 'POST',
                    url:  "{{path('ajax_publish_presentation_switch', {'slug': presentation.slug}) }}",
                    data: {
                        'checkboxValue': e.target.checked
                    },
                    dataType: 'json',
                    success: function(data){
                    }
                });
            });
            
            $('#allowCommentsSwitch').on('change.bootstrapSwitch', function(e) {
                $.ajax({
                    method: 'POST',
                    url:  "{{path('ajax_allow_comments_switch', {'slug': presentation.slug}) }}",
                    data: {
                        'checkboxValue': e.target.checked
                    },
                    dataType: 'json',
                    success: function(data){
                    }
                });
            });

        
        });  


    </script>

{% endblock %}