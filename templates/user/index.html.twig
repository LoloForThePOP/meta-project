{% extends 'base.html.twig' %}

{% block title %}Page de {{user.name}} {% endblock %}

{% block body %}

    <div class="container mt-3">

        <div class="row">

            <div class="col-3 text-center">

                <img src="{{user.image}}" alt="Image de {{ user.name }}">

            </div>

            <br>

            <div class="col-9">

                <h3>{{user.name}}</h3>

                <div class="mt-3">

                    <span class="badge badge-primary p-3">{{user.presentations | length}} Projets Créé(s)</span>

                    {% if user is same as(app.user) %}

                        <div class="mt-3">

                            <a href="{{ path ('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier Mes Informations</a>
                            
                            <a href="{{ path ('account_update_password') }}" class="btn btn-primary mb-2">Modifier Mon Mot de Passe</a>

                        </div>
    
                    {% endif %}

                </div>

                

            </div>

        </div>

        <div class="row mt-3">

            {% if user.presentations | length > 0 %}

            <div class="row">

                {% for presentation in user.presentations %}

                    {% include 'pp/_display_list.html.twig' %}

                {% endfor %}

            </div>
        
        {% else %}
    
            <div class="alert alert-warning">
                <p><strong>Aucune Présentation de Projet Actuellement</strong></p>
            </div>
        
        {% endif %}

        </div>

        <div class="row mt-3">

            <div class="col-6 pl-5">

                {{ user.description | raw}}

            </div>

        </div>

    </div>

{% endblock %}
