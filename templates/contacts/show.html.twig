{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="container col-sm-11">

        <h3 class="my-3 font-weight-bold">Détails</h3>

        <table class="table">
            <tbody>
                
                <tr>
                    <th  style="width: 15%" >Titre</th>
                    <td>{{ contact.title }}</td>
                </tr>

                <tr>
                    <th>Email 1</th>
                    <td>{{ contact.email1 }}</td>
                </tr>

                <tr>
                    <th>Email 2</th>
                    <td>{{ contact.email2 }}</td>
                </tr>

                <tr>
                    <th>Télephone 1</th>
                    <td>{{ contact.tel1 }}</td>
                </tr>

                <tr>
                    <th>Télephone 2</th>
                    <td>{{ contact.tel2 }}</td>
                </tr>

                <tr>
                    <th>Site Web</th>
                    <td>{{ contact.website1 }}</td>
                </tr>

                <tr>
                    <th>Adresse Postale</th>
                    <td>{{ contact.postalMail }}</td>
                </tr>

                <tr>
                    <th>Notes Additionnelles</th>
                    <td>{{ contact.remarks }}</td>
                </tr>

            </tbody>
        </table>

    
    <a href="{{ path('contact_edit', {'id': contact.id, 'slug' : slug }) }}">
        <button class="btn btn-warning btn-lg font-weight-bold my-2 mr-2">Modifier</button>
    </a>

    <a href="{{ path('contact_index', {'slug': slug}) }}">
        <button class="btn btn-info btn-lg font-weight-bold my-2">Retour</button>
    </a>

    {{ include('contacts/_delete_form.html.twig') }}

    </div>


{% endblock %}
