<div id="{{persorg.id}}" class="js-sortableItem persorgCard position-relative" style="height:150px; width:150px; margin-right: 15px; margin-bottom: 20px;cursor:pointer; border:1px solid black;">

    <!-- Persorg Image -->
    
    <div class="d-flex justify-content-center" style="margin-top:15px; margin-bottom:8px;">

        {% if persorg.imageFile is not null %}

            <img class="img-fluid" src="{{ asset('/images/persorgs/' ~ persorg.image) | imagine_filter('teammate_thumbnail') }}" height="100px" width="100px">
        
        {% else %}
                                
        <div class="avatar-circle mx-auto" style="margin-top:25px;">

            <span class="initials">

                {{persorg.name | slice (0,1) | capitalize}}

            </span>

        </div>
    
    {% endif %}

    </div> 

    <!-- Persorg Name -->

    <div class="d-flex justify-content-center" style="margin-bottom:8px;">

        {{ persorg.name | length < 10 ? persorg.name : persorg.name|slice(0, 10) ~ '...' }}

    </div>

    <!-- Remove Persorg (Button with Red Cross) -->

    <button type="button" class="js-delete-persorg d-inline position-absolute btn btn-danger sharp py-0 px-2" data-id="{{persorg.id}}" style="top:0; right:0;"><span class="font-weight-bold">x</span></button>

</div>