{% extends 'base.html.twig' %}

{% block title %}Description Texte du Projet{% endblock %}

{% block body %}

<div class="container">

    <!-- Title Container with Collapsible Info-Box -->

    <div class="mt-md-4 mb-4">

        <!-- ui page title -->

        <h3 class="h3 font-weight-bold d-inline mr-3">Description du Projet - Texte -</h3>

        <!-- collapsable advice -->	

        <a class="font-weight-bold my-1 d-inline" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">

            <span class="btn btn-light fs-15 h5 sharp p-1 px-2" style="letter-spacing: 2px;"> Info </span>
            
        </a>
            
        <div class="collapse col-md-7 mt-0 mb-4" id="collapseExample">

            <p class="lh-2 h5">Pour que la lecture soit plus agréable, n'hésitez pas à utiliser des listes, plusieurs paragraphes, et des sauts de lignes.</p>

        </div>

    </div>

    <!-- Project Text Description Rich Text Editor -->

    <div class="col-md-9">


        {{form_start(form)}}


        <!-- Form Errors Display -->

        <span class="h5 text-danger">

            {{form_errors(form.content)}}

        </span>

        <!-- Rich Text Editor Area -->

        <div class="mb-4">

          {{form_widget(form.content)}}

        </div>


        <!-- Action Buttons -->

        <div class= "pt-2">
            
            <button type="submit" class="btn btn-success btn-lg bg-green sharp h3 font-weight-bold mb-4 mr-3">Enregistrer</button>
        
            <a class="text-decoration-none text-white" href="{{ path('edit_presentation_menu', {'slug': slug}) }}">
                <button type="button" class="btn btn-info btn-lg sharp font-weight-bold mb-4">Retour</button>
            </a>

        </div>

        {{form_end(form)}}

    </div>

</div>

{% endblock %}




{% block javascripts %}

    <!-- CDN - TinyMCE Rich Text Editor -->

    <script src="https://cdn.tiny.cloud/1/ozugcg6rtcsvf9xx1qfujj2aluoo7ezwd2pfx5xnwf4nhujq/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


    <!-- Parameters - TinyMCE Rich Text Editor -->

    <script>
        
        tinymce.init({

            mode : "specific_textareas",

            editor_selector : "tinymce",

            content_css : '/css/tinymce.css',

            width : "100%",

            height: "500",

            entity_encoding : "raw",

            menubar: 'edit format',

            menu: {

                edit: { title: 'Edit', items: 'undo redo | cut copy paste | selectall | searchreplace' },

                format: { title: 'Format', items: 'bold italic underline strikethrough superscript subscript codeformat removeformat' },

            }, 

            language: 'fr_FR',

            plugins: "emoticons, lists",

            toolbar: "undo redo emoticons bullist bold italic underline alignleft aligncenter alignright alignjustify outdent indent",

            content_style: "body {padding: 0px 15px;",

            //link_title: false, (only when links plugin will be integrated)
            //target_list: false,
        });

    </script>

{% endblock %}
