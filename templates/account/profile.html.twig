{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/app_forms.css" />{% endblock %}


{% block title %} Modification du Profil Utilisateur {% endblock %}

{% block body %}

    <div class="container">

        <h3 class="mt-3 font-weight-bold">Modification du Profil</h3>

        <div class="row">

            <div class="col-md-8">
                        
                {{ form_start(form) }}

                {{ form_widget(form) }}

                {# Actions Buttons #}

                <div class="my-2">
                    <button type="submit" class="btn btn-success font-weight-bold mr-2">Enregistrer les Modifications</button>
                    <button type="button" class="btn btn-info font-weight-bold">Retour</button>
                </div>
            
                {{ form_end(form) }}

            </div>
        </div>
        
    </div>
    
{% endblock %}